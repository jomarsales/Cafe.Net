@using CafeDotNet.Core.Users.DTOs
@using System.Security.Claims
@model ChangePasswordRequest
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Alterar Senha - Café.Net Admin";
}

<main class="mb-4">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">

                <h1 class="mb-4 text-center">Alterar Senha</h1>

                <form asp-action="ChangePassword" asp-controller="Account" method="post">

                    <input asp-for="Id" type="hidden" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
                    
                    <div class="mb-3">
                        <label asp-for="CurrentPassword" class="form-label mb-0">Senha atual</label>
                        <input asp-for="CurrentPassword" class="form-control" placeholder="Digite sua senha atual" />
                        <span asp-validation-for="CurrentPassword" class="text-danger small" id="error-CurrentPassword"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label mb-0">Nova senha</label>
                        <input asp-for="NewPassword" class="form-control" placeholder="Digite a nova senha" />
                        <span asp-validation-for="NewPassword" class="text-danger small" id="error-NewPassword"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmNewPassword" class="form-label mb-0">Confirmação</label>
                        <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirme a nova senha" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger small" id="error-ConfirmNewPassword"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" asp-controller="Admin" class="btn btn-outline-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-primary">Alterar senha</button>
                    </div>
                </form>


            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}