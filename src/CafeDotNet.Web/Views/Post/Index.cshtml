@model CafeDotNet.Web.Models.ArticleListPageViewModel

@{
    ViewData["Title"] = Model.Header.Title;
}

<partial name="_Header" model="Model.Header" />

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            @foreach (var artigo in Model.Articles)
            {
                <div class="post-preview">
                    <a asp-controller="Post" asp-action="Index" asp-route-id="@artigo.Id">
                        <h2 class="post-title" data-aos="zoom-in">@artigo.Title</h2>
                        @if (!string.IsNullOrEmpty(artigo.Subtitle))
                        {
                            <h3 class="post-subtitle" data-aos="zoom-in">@artigo.Subtitle</h3>
                        }
                    </a>
                    <p class="post-meta" data-aos="zoom-in">
                        Publicado por
                        <a href="#!">@artigo.Autor</a>
                        em @artigo.PublishDate.ToString("dd 'de' MMMM 'de' yyyy")
                    </p>
                </div>
                <hr class="my-4" />
            }

            <!-- Paginação -->
            <div class="d-flex justify-content-between align-items-center gap-3 flex-wrap mb-4" data-aos="zoom-in">

                @if (Model.Articles.HasPreviousPage)
                {
                    <a class="btn btn-outline-primary text-uppercase fw-bold"
                       asp-action="Index"
                       asp-route-page="@(Model.Articles.PageIndex - 1)">
                        ← Mais recentes
                    </a>
                }
                
                <nav aria-label="Page navigation" class="d-flex align-items-center">
                    <ul class="pagination mb-0">
                        @foreach (var pageNumber in Model.Articles.Pages)
                        {
                            if (pageNumber == Model.Articles.PageIndex)
                            {
                                <li class="page-item active" aria-current="page">
                                    <span class="page-link">@pageNumber</span>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-page="@pageNumber">@pageNumber</a>
                                </li>
                            }
                        }
                    </ul>
                </nav>

                @if (Model.Articles.HasNextPage)
                {
                    <a class="btn btn-primary text-uppercase fw-bold"
                       asp-action="Index"
                       asp-route-page="@(Model.Articles.PageIndex + 1)">
                        Mais antigos →
                    </a>
                }
            </div>                        
        </div>
    </div>
</div>
