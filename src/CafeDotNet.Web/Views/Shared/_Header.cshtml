@model HeaderViewModel

<header class="masthead" style="background-image: url('@Model.BannerImagemPath')">
    <div class="container position-relative px-4 px-lg-5 @Model.BannerBackgroundClass">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1 data-aos="zoom-out">
                        <span class="d-none">@Model.Title</span>
                        <img src="@Model.LogoTitleImagemPath" alt="Café.Net" />
                    </h1>
                    <h2 data-aos="fade-right" class="subheading mb-3">@Model.SubTitle</h2>
                </div>
            </div>
        </div>
    </div>
</header>