@{
    var username = User?.Identity?.Name ?? "Usuário";
}

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle d-flex align-items-center px-lg-3 py-3 py-lg-4" href="#"
       id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="bi bi-person-circle fs-5 me-2"></i>
        <span>@username</span>
    </a>

    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
        <li>
            <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                <i class="bi bi-key me-2"></i> ALTERAR SENHA
            </a>
        </li>
        <li><hr class="dropdown-divider"></li>
        <li>
            <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                <i class="bi bi-box-arrow-right me-2"></i> SAIR
            </a>
        </li>
    </ul>
</li>
